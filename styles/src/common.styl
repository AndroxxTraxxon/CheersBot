@font-face
    font-family Roobert
    font-weight normal
    src url('/Roobert-Regular.woff2') format('woff2')

@font-face
    font-family Roobert
    font-weight bold
    src url('/Roobert-Bold.woff2') format('woff2')

@font-face
    font-family Roobert
    font-weight 600
    src url('/Roobert-SemiBold.woff2') format('woff2')

body
    font-family Roobert, Helvetica Neue, Helvetica, Arial, sans-serif
    color #dedee3
    background #0e0e10
    font-size 12px
    display flex
    flex-direction column
    align-items center
    margin 0
    border none
    padding 0

main
    user-select none

*
    box-sizing border-box

input
select
    background-color hsla(0, 0, 100%, 0.15)
    border none
    border-radius 4px
    color #dedee3
    font inherit
    flex 1 1 auto

select
    padding 4px 10px

input
    width 0
    padding 5px 10px

input[type='number']
    width 55px

input:active
input:focus
select:active
select:focus
    background black

audio
    width 202px
    height 25px

hr
    margin 0 -8px 4px
    border none
    border-bottom 1px solid hsla(0, 0, 100%, 0.1)

b
    color #50b9a2
    user-select text

.draggable
    position relative
    margin-bottom 16px

.draggable.dragging
    opacity 0.5

.dragger
    position absolute
    top -9px
    right 0
    left 13px
    height 20px

.PanelHeader
    font-size 24px

.PanelGroup
    position relative
    border 1px solid #303032
    border-radius 6px
    background #18181b
    margin 0
    padding 8px
    padding-top 12px

.PanelGroup > .legend
    position absolute
    top -9px
    padding-left 5px
    color #50b9a2
    font-weight bold

.PanelGroup > .opener
    display flex
    justify-content center
    align-items center
    position absolute
    left -9px
    top -9px
    width 17px
    height 17px
    background #0e0e10
    border-radius 5px
    border 1px solid #303032
    cursor default

.PanelGroup > .opener::before
    position relative
    top -1px
    content '+'

.PanelGroup > .opener.open::before
    content '-'

.PanelField
.field
    display flex
    margin-bottom 4px
    align-items baseline
    flex-wrap wrap

.PanelField > .label
    display flex
    flex 0 0 100px
    font-weight bold
    align-items baseline

.PanelField > .body
    display flex
    flex 1 0 0%
    align-items baseline

.PanelField:last-child
.field:last-child
    margin-bottom 0

.button
button
    border-radius 4px
    border none
    padding 5px 10px
    background-color hsla(0, 0, 100%, 0.15)
    color #efeff1
    font-size 12px
    font-weight bold
    font-family inherit
    cursor pointer
    text-decoration none

.button.primary
button.primary
    background-color #2d7575

.button:hover
button:hover
    background-color hsla(0, 0, 100%, 0.2)

.button.primary:hover
button.primary:hover
    background-color #50b9a2

.spacer
    flex 1 1 auto

.QueuedEvent
.QueuedMode
    margin-bottom 5px
    padding 5px
    background #3a3a3d
    border 1px solid #303032
    border-radius 6px

.QueuedEvent:last-child
.QueuedMode:last-child
    margin-bottom 0

.TagList
    display flex
    flex-direction column
    flex 1 0 0%

.list
    display flex
    flex-wrap wrap

.Tag
    display flex
    font-size 11px
    padding 2px 6px 2px 10px
    margin-right 5px
    margin-top 5px
    background-color hsla(0, 0, 100%, 0.15)
    font-weight bold
    border-radius 16px
    cursor pointer

.Tag:hover
    background-color hsla(0, 0, 100%, 0.2)

.Tag::after
    position relative
    top -1px
    content 'ðŸ—™'
    font-size 10px
    font-weight normal
    padding-left 2px

.Overlay
    display flex
    flex-direction column
    align-items flex-start

.TwitchIcon
    display inline-flex
    align-self normal
    justify-content center
    align-items center

.TwitchIcon[data-size='1']
    width 28px
    height 28px

.TwitchIcon[data-size='2']
    width 56px
    height 56px

.TwitchIcon[data-size='3']
    width 112px
    height 112px
